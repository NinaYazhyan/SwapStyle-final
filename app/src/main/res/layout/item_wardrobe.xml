<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:radius="12dp"
    android:elevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Larger Image View -->
        <ImageView
            android:id="@+id/wardrobeImage"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/wardrobeTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Title"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/toggleIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_visibility_off_24"
                android:padding="4dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/wardrobeUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uploaded by: User"
            android:textSize="16sp"
            android:textColor="#555555"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/wardrobeCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="16sp"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/wardrobeSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size"
            android:textSize="16sp"
            android:paddingTop="2dp" />

        <TextView
            android:id="@+id/wardrobeDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:visibility="gone"
            android:paddingTop="8dp"
            android:textSize="16sp"
            android:lineSpacingMultiplier="1.2" />

        <Button
            android:id="@+id/buttonMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send a Message"
            android:backgroundTint="@color/pink"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>