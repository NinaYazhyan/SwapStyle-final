<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_5"
    tools:context=".MainActivity">

    <!-- Added Fragment Container (placed above your buttons) -->
    <TextView
        android:id="@+id/textAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SwapStyle"
        android:textSize="48sp"
        android:textColor="#E6C4D8"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp" />

    <!-- Your existing buttons (unchanged) -->
    <FrameLayout
        android:id="@+id/optionsContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/login_button_bt"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/pink"
        android:gravity="center_horizontal"
        android:text="Log In"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="500dp" />

    <Button
        android:id="@+id/signup_button_bt"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/pink"
        android:gravity="center_horizontal"
        android:text="Sign Up"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/login_button_bt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />
    <Button
        android:id="@+id/test_user_button"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/pink"
        android:gravity="center_horizontal"
        android:text="Test User"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/signup_button_bt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>