<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/img_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Upload Item Title (unchanged) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Item"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="12dp"/>

        <!-- Photo Upload Section (unchanged) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photos"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select a photo"
            android:textSize="12sp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:paddingTop="8dp">

            <ImageView
                android:id="@+id/img_add_photo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:background="@android:color/darker_gray"
                android:src="@android:drawable/ic_menu_camera"/>

            <!-- Dynamically added images will go here -->
        </GridLayout>

        <Button
            android:id="@+id/btn_add_photos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add A Photo"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"/>

        <!-- Description Input (unchanged) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textStyle="bold"
            android:paddingTop="8dp"/>

        <EditText
            android:id="@+id/input_description"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="top"
            android:padding="10dp"/>

        <!-- Specification Section (unchanged) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specification:"
            android:textStyle="bold"
            android:paddingTop="10dp"/>

        <!-- Title (unchanged) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title:"/>

        <EditText
            android:id="@+id/input_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:padding="10dp"
            android:hint="Add Title"/>

        <!-- Category Selection (only added spinnerMode) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category:"
            android:paddingTop="9dp"/>

        <Spinner
            android:id="@+id/spinner_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"/>

        <!-- Subcategory Selection (only added spinnerMode) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subcategory:"
            android:paddingTop="9dp"/>

        <Spinner
            android:id="@+id/spinner_subcategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"/>

        <!-- Size Selection (unchanged) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Size"
            android:paddingTop="8dp"/>

        <RadioGroup
            android:id="@+id/size_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton android:id="@+id/size_xxs" android:text="XXS"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/size_xs" android:text="XS"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/size_s" android:text="S"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/size_m" android:text="M"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/size_l" android:text="L"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/size_xl" android:text="XL"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/size_xxl" android:text="XXL"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/size_xxxl" android:text="2XL"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- Upload and Discard Buttons (unchanged) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_upload"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Upload"
                android:backgroundTint="@color/black"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"/>

            <Button
                android:id="@+id/btn_discard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Discard"
                android:backgroundTint="@color/black"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>