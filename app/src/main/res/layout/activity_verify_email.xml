<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center">

    <TextView
        android:id="@+id/textViewVerify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A verification email has been sent to your email. Please verify your email before proceeding."
        android:textSize="16sp"
        android:paddingBottom="10dp"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/buttonCheckVerification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check Verification Status"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/buttonResendEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resend Verification Email"
        android:layout_marginTop="10dp"/>
</LinearLayout>
